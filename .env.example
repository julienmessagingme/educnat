# Configuration de l'application
NODE_ENV=development
PORT=3000

# Base de données SQLite
DATABASE_PATH=./data/prd.db

# Dossiers de stockage
UPLOAD_DIR=./uploads
OUTPUT_DIR=./output

# Taille maximale des fichiers (10MB)
MAX_UPLOAD_SIZE=10485760

# Clé API Claude (obligatoire pour l'extraction IA)
ANTHROPIC_API_KEY=votre_cle_api_ici

# Session et sécurité
SESSION_SECRET=generer_un_secret_aleatoire_ici

# LibreOffice (pour conversion Word → PDF)
LIBREOFFICE_PATH=C:\Program Files\LibreOffice\program\soffice.exe
